<!-- ./views/index.handlebars -->
<!-- search bar -->
<h1 class="mb-1 restaurant-show-title">Best Restaurant in Taiwan</h1>
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="GET">
        <div class="input-group">
          <div class="input-group-prepend">
            <button class="btn" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
          <input type="text" name="keyword" class="form-control" placeholder="搜尋 餐廳名稱、分類"
            aria-label="Restaurant Name..." {{#if keyword}} value="{{keyword}}" {{/if}}
            aria-describedby="search-button">
          <div class="input-group-append">
            <div class="dropdown ml-1">
              <button class="btn btn-outline-light dropdown-toggle" type="button" id="dropdownMenuButton" name="sort"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                顯示順序
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/?sort=rating&order=-1" name="-1">評分高優先</a>
                <a class="dropdown-item" href="/?sort=category&order=1" name="1">類別：A-Z</a>
                <a class="dropdown-item" href="/?sort=location&order=1" name="1">地址：A-Z</a>
                <a class="dropdown-item" href="/?sort=name&order=1" name="1">餐廳名稱：A-Z</a>
                <a class="dropdown-item" href="/?sort=name&order=-1" name="-1">餐廳名稱：Z-A</a>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

