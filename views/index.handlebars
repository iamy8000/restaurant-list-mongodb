<!-- restaurant list -->
<div class="container mt-5">
  {{!-- {{#if warning}}
  <div class="h4 text-center">
    {{warning}}
  </div>
  {{/if}} --}}
  <div class="row">
    {{#each restaurants}}
    <div class="col-sm-3">
      <a href="/restaurants/{{this._id}}" class="text-secondary">
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>
            <div>
              <div class="restaurant-category mb-1">
                {{this.category}}
                <span class="ml-1">|</span>
                <span class="badge badge-pill badge-warning font-weight-normal ml-1">
                  {{this.rating}}
                  <i class="fas fa-thumbs-up"></i>
                </span>
              </div>
            </div>
          </div>
          <div class="card-footer text-right">
            <a class="btn btn-light btn-sm" href="./restaurants/{{this._id}}/edit" role="button" id="editButton"><i
                class="fas fa-pen"></i></a>
            <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;"
              id="deleteButton">
              <button class="btn btn-light btn-sm" id="deleteButton" type="submit"
                onclick="if (!confirm('Are you sure?')) { return false }"><span><i
                    class="fas fa-trash-alt"></i></span></button>
            </form>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>