<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <div class="card" id="restaurant-show-page">
        <div class="card-header" id="restaurant-description">
          <i class="fas fa-quote-left"></i>
          <p class="font-italic m-0 text-center">{{restaurant.description}}</p>
          <i class="fas fa-quote-right"></i>
        </div>
        <div class="card-body">
          <p class="mb-1">
            <span class="text-secondary">
              <i class="fas fa-utensils pr-2"></i>
              類別：
            </span>
            {{restaurant.category}}
          </p>
          <p class="mb-1">
            <span class="text-secondary">
              <i class="fas fa-map-marker-alt pr-2"></i>
              地址：
            </span>
            <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
              {{restaurant.location}}
              <i class="fas fa-location-arrow pr-2 fa-xs"></i>
            </a>
          </p>
          <p class="mb-1">
            <span class="text-secondary">
              <i class="fas fa-mobile-alt pr-2"></i>
              電話：
            </span>
            {{restaurant.phone}}
          </p>
          {{!-- <img class="card-img-bottom rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}"
            alt="{{restaurant.name}}" style="max-width: 600px;"> --}}
          <img class="card-img-bottom rounded mx-auto mt-4" src="{{restaurant.image}}" alt="{{restaurant.name}}"
            style="height: max-content">
        </div>

        <div class="card-footer text-center p-3">
          <a class="btn btn-light btn-sm mb-80" href="/restaurants/{{restaurant._id}}/edit" role="button"
            id="editButton"><i class="fas fa-pen"></i></a>
          <form action="/restaurants/{{ restaurant._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-sm mb-10" type="submit" onclick="if (!confirm('Are you sure?')) { return false }"
              id="deleteButton"><span><i class="fas fa-trash-alt"></i></span></button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>